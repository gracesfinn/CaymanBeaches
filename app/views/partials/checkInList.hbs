<h2 class="ui center aligned icon header">
    <i class="thumbtack icon"></i>
    Check Ins
</h2>

<div class="ui search">
    <div class="ui icon input">
        <input class="prompt" type="text" placeholder="Search beach...">
        <i class="search icon"></i>
    </div>
    <div class="results"></div>
</div>

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<section class="ui raised segment">

    <div class="ui grid">
        <aside class="six wide column">


            <img src="./images/beach1.jpg" class="ui large rounded image">
            <div class="w3-display-topmiddle w3-container w3-text-white w3-padding-32 w3-hide-small">
                <h4><b><a href="/beaches/5ed983c0da457141fcbbde69">Seven Mile Beach</a></b> </h4>

            </div>
        </aside>
        <article class="eight wide column">

            <table class="ui very basic collapsing celled table">
                <tbody>

                <tr>
                    <td>
                        <h4  class="item">
                            <i class="calendar icon"></i>
                        </h4>
                    </td>
                    <td>
                        1.15pm 1st of June 2020
                </tr>
                <tr>
                    <td>
                        <h4  class="item">
                            <i class="users icon"></i>
                        </h4>
                    </td>
                    <td>
                       Group Size: 4
                    </td>
                </tr>
                <tr>

                    <td>
                        <h4  class="item">
                            <i class="comments outline icon"></i>
                        </h4>
                    </td>
                    <td>
                        Nice and Quiet, perfect for social distancing.
                    </td>
                </tr>
                <tr>
                    <td>
                        <h4  class="item">
                            <i class="user circle outline icon"></i>
                        </h4>
                    </td>
                    <td>
                        Homer Simpson
                    </td>
                </tr>
                <tr>
                </tbody>
            </table>
        </article>
    </div>
</section>

{{#each checkIns}}
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <section class="ui raised segment">

        <div class="ui grid">
            <aside class="six wide column">


                <img src="{{beach.imageMain}}" class="ui large rounded image">
                <div class="w3-display-topmiddle w3-container w3-text-white w3-padding-32 w3-hide-small">
                    <h4><b><a href="/beaches/{{_id}}">{{beachName}}</a></b> </h4>

                </div>
            </aside>
            <article class="eight wide column">

                <table class="ui very basic collapsing celled table">
                    <tbody>

                    <tr>
                        <td>
                            <h4  class="item">
                                <i class="calendar icon"></i>
                            </h4>
                        </td>
                        <td>
                           {{date}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4  class="item">
                                <i class="users icon"></i>
                            </h4>
                        </td>
                        <td>
                            Group Size: {{groupSize}}
                        </td>
                    </tr>
                    <tr>

                        <td>
                            <h4  class="item">
                                <i class="comments outline icon"></i>
                            </h4>
                        </td>
                        <td>
                            {{comment}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4  class="item">
                                <i class="user circle outline icon"></i>
                            </h4>
                        </td>
                        <td>
                            {{memberName}}
                        </td>
                    </tr>
                    <tr>
                    </tbody>
                </table>
            </article>
        </div>
    </section>

{{/each}}