<section class="ui raised segment">
    <div class="ui grid">
        <aside class="six wide column">
            <img src="./images/beach1.jpg" class="ui large rounded image">
        </aside>
        <article class="eight wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>Location </th>
                    <th>Rating</th>
                    <th>Name of Reviewer</th>
                </tr>
                </thead>
                <tbody>
                {{#each reviews}}
                    <tr>
                        <td> {{location}} </td>
                        <td> {{rating}} </td>
                        <td> {{reviewer.firstName}} {{reviewer.lastName}} </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>